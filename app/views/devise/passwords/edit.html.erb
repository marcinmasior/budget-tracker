

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <h2>Change your password</h2>

  <%= f.error_notification %>
  <%= f.input :reset_password_token, as: :hidden %>

  <%= f.input :password, label: 'New password', placeholder: 'New password', autofocus: true, autocomplete: 'new-password', hint: (@minimum_password_length ? "#{@minimum_password_length} characters minimum" : nil) %>

  <%= f.input :password_confirmation, label: 'Confirm new password', placeholder: 'Confirm new password', autocomplete: 'new-password' %>

  <div class="d-grid gap-2">
    <%= f.button :submit, "Change my password", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
