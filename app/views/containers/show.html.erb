<%= render 'shared/header', header: @container.name do %>
  <%= link_to edit_container_path(@container), class: "btn btn-primary" do %>
    <i class="bi bi-pencil"></i> Edit this container
  <% end %>

  <%= button_to @container, method: :delete, class: "btn btn-danger", onclick: "return confirm('Are you sure you want to delete this container?');" do %>
    <i class="bi bi-trash3"></i> Destroy this container
  <% end %>

  <%= link_to containers_path, class: "btn btn-secondary" do %>
    <i class="bi bi-arrow-left"></i> Back to containers
  <% end %>
<% end %>

<%= render 'records/index', container: @container, records: @records, q: @q %>