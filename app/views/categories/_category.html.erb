<tr id="<%= dom_id category %>">
  <td><%= category.name %></td>
  <td class="text-end"><%= category.records.size %></td>
  <td>
    <div class="d-flex gap-2 justify-content-center">
      <%= link_to edit_category_path(category), class: "btn btn-sm btn-primary" do %>
        <i class="bi bi-pencil"></i> Edit
      <% end %>
      <%= button_to category, method: :delete, class: "btn btn-sm btn-danger",
        data: {
          controller: "confirm",
          action: "click->confirm#createModal",
          confirm_text: "Are you sure you want to delete this category?"
        } do %>
        <i class="bi bi-trash3"></i> Delete
      <% end %>
    </div>
  </td>
</tr>