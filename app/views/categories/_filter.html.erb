<%= search_form_for q, html: {
  data: {
    controller: "filter-form",
    action: "change->filter-form#submitForm",
    filter_form_target: "form"
    }
  } do |f| %>
  <div class="row mb-3">
    <div class="col-3 mb-2">
      <%= f.label :name_cont, "Description Contains" %>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-search"></i></span>
        <%= f.text_field :name_cont, class: "form-control", placeholder: "Description Contains" %>
      </div>
    </div>
    <div class="col-3 mb-2 d-flex align-items-end gap-2">
      <%= link_to request.path, class: "btn btn-secondary" do %>
        <i class="bi bi-arrow-counterclockwise"></i> Reset Filters
      <% end %>
    </div>
  </div>

<% end %>