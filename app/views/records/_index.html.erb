
<%= render 'records/statistics', container: container, records: records  %>

<div>
  <div class="d-flex justify-content-between align-items-center">
    <h3>Records</h3>

    <%= link_to new_container_record_path(container), class: "btn btn-success" do %>
      <i class="bi bi-plus"></i> New record
    <% end %>
  </div>
</div>
<div>
  <%= render 'records/filter', container: container, q: q %>
</div>

<div id="records">
  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <th></th>
        <th>Date</th>
        <th>Description</th>
        <th>Category</th>
        <th>Paid</th>
        <th class="text-end"><%= sort_link q, :value, "Value" %></th>
        <th class="text-center"></th>
      </tr>
      </thead>
      <tbody>
      <% records.each do |record| %>
        <%= render record %>
      <% end %>
      </tbody>
      <tfoot>
      <tr>
        <td colspan="5"></td>
        <td class="text-end"><%= formatted_balance(container.balance) %></td>
        <td></td>
      </tr>
      </tfoot>
    </table>
  </div>
</div>

